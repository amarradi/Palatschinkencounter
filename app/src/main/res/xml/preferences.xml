<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/general_preference">

        <ListPreference
            android:defaultValue="@string/lightmode_preference"
            android:entries="@array/design_mode_preference_key"
            android:entryValues="@array/design_mode_preference_value"
            android:key="@string/theme_key"
            android:summary="@string/theme_summary"
            android:title="@string/theme_preference"
            app:icon="@drawable/ic_dn_switch" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/recipe_preference">
        <Preference
            android:icon="@drawable/ic_baseline_description_24"
            android:key="recipe"
            android:summary="@string/recipe_summary"
            android:title="@string/txt_menu_item_recipe" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/about">
        <Preference
            android:key="about"
            android:summary="@string/about_summary"
            android:title="@string/about"
            app:icon="@drawable/ic_baseline_emoji_emotions_24" />
        <Preference
            android:selectable="true"
            app:icon="@drawable/ic_baseline_mail_24"
            app:key="feedback_preference"
            app:summary="@string/send_feedback_summary"
            app:title="@string/send_feedback" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/version_preference">
        <Preference
            android:key="version_preference"
            android:selectable="false"
            app:icon="@drawable/ic_baseline_numbers_24" />
    </PreferenceCategory>
</PreferenceScreen>